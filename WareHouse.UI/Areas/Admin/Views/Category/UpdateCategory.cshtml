
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouse.UI.Areas.Admin.Models.DTO.CategoryDTO

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Category/AddCategory">Add Category</a></li>
        <li><a href="/Admin/Category/CategoryList">Category List</a></li>
        <li class="active">Update Category</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Category</h3>
                </div>
                <form action="/Admin/Category/UpdateCategory" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Category Name</label>
                            <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" placeholder="Category Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Description</label>
                            <input type="text" name="CategoryDescription" value="@Model.CategoryDescription" class="form-control" placeholder="Category Description">
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

